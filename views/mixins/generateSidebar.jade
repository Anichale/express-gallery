mixin generateSidebar(listings)
  - for (var i = 0; i < listings.length; i += 6)
    .row.show-for-medium-up
      - for (var j = i; j < 3+i; j++)
        .medium-12.columns
          .sidebar-container
            a(href='/gallery/'+listings[j].id)
              img.image-listings(src= listings[j].picture)
            div.sidebar-info=listings[j].description + ' - ' +  listings[j].link